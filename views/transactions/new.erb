<form action="/transactions" method="POST">

  <label for="category-input">Category:</label>
  <select id="category-input" name="category_id">
    <option selected disabled value="Choose one">Choose one</option>
    <% @categories.each do |category| %>
    <option value="<%= category.id %>"> <%= category.name %> </option>

    <% end %>

  </select>

  <label for="vendor-input">Vendor:</label>
  <select id="vendor-input" name="vendor_id">
    <option selected disabled value="Choose one">Choose one</option>
    <% @vendors.each do |vendor| %>
    <option value="<%= vendor.id %>"> <%= vendor.name %> </option>

    <% end %>

  </select>

  <label for="amount-input">Amount:</label>
  <input id="amount-input" type="number" name="amount" step="0.01" placeholder="00.00">

  <label for="date-input">Date:</label>
  <input id="date-input" type="date" name="transaction_date">

  <input class="button--submit" type="submit" value="Add Transaction">
</form>
