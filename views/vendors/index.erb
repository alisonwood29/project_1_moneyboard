<h2>Spending by Vendor</h2>

<table>

  <tr>
  <td>
    <% @vendors.each do |vendor| %>
     <%= vendor.name %>
     <% end %>
   </td>
  <td>
  <%= amounts = @vendors.each {|vendor| vendor.total_spend} %>
    <% sorted = amounts.sort {|a, b| b <=> a} %>
    <% return sorted %>
    <% end %>
  </td>
</tr>



</table>

<button type="button" name="button"><a href="/vendors/new">Add new vendor</a></button>
